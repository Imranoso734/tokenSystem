datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URI")
}

generator client {
  provider = "prisma-client-js"
}

enum UserRole {
  ADMIN
  USER
}

model Password {
  id           String @id @default(auto()) @map("_id") @db.ObjectId
  hash         String
  passwordText String
  user         User   @relation(fields: [userId], references: [id])
  userId       String @unique @db.ObjectId
}

model User {
  id        String     @id @default(auto()) @map("_id") @db.ObjectId
  email     String     @unique
  name      String
  phone     String?
  mobile    String?
  password  Password?
  approved  Boolean    @default(true)
  role      UserRole   @default(USER)
  userQuery UserQuery?
}

model UserQuery {
  id       String  @id @default(auto()) @map("_id") @db.ObjectId
  user     User    @relation(fields: [userId], references: [id])
  userId   String  @unique @db.ObjectId
  question String?
  chat     Json
}
