{
    "version": 2,
    "builds": [
        {
            "src": "build/index.js",
            "use": "@vercel/node"
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "build/index.js"
        }
    ],
    "env": {
        "DATABASE_URI": "@database_uri",
        "JWT_SECRET": "@jwt_secret",
        "FROM_EMAIL": "@from_email",
        "PORT": "5000"
    },
    "build": {
        "env": {
            "PRISMA_CLIENT_ENGINE_TYPE": "binary"
        }
    },
    "regions": [
        "sfo1"
    ] 
}