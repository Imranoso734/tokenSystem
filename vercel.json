{
    "version": 2,
    "builds": [
        {
            "src": "build/index.js",
            "use": "@vercel/node"
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "build/index.js"
        }
    ],
    "env": {
        "FRONT_END_URL": "@front_end_url",
        "DATABASE_URI": "@database_uri",
        "JWT_SECRET": "@jwt_secret",
        "FROM_EMAIL": "@from_email",
        "PORT": "5000"
    },
    "functions": {
        "build/index.js": {
            "memory": 1024,
            "maxDuration": 10
        }
    },
    "build": {
        "env": {
            "PRISMA_CLIENT_ENGINE_TYPE": "binary"
        }
    },
    "regions": [
        "sfo1",
        "iad1"
    ]
}